{
    "name": "Tracks Vigilante",
    "manifest_version": 3,
    "version": "1.21",
    "description": "Tracks network calls to Tracks",
    "permissions": [
      "activeTab",
      "scripting",
      "background", 
      "webRequest",
      "storage"
    ],
    "icons": { 
      "16": "/icons/tv16.png",
      "48": "/icons/tv48.png",
     "128": "/icons/tv128.png" 
    },
    "background": {
      "service_worker": "service-worker.js"
    },
    "action": {
      "default_icon": { 
        "16": "/icons/tv16.png",
        "48": "/icons/tv48.png",
       "128": "/icons/tv128.png" 
      },
      "default_popup": "popup.html"
    },
    "host_permissions": [
      "http://pixel.wp.com/",
      "https://pixel.wp.com/",
      "*://*/*"
    ]
  }